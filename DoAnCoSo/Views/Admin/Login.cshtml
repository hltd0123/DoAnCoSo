@model User
@{
    Layout = null;
}

<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Design.css" asp-append-version="true" />
</head>

<body>
    <div class="wrapper">
        <form class="login_box" asp-action="Index">
            <div class="login-header">
                <span>Login</span>
            </div>

            <div class="input_box">
                <input type="text" id="name" class="input-field" required placeholder="Username" asp-for="Name">
                <i class="bx bx-user icon"></i>
            </div>

            <div class="input_box">
                <input type="password" id="password" class="input-field" required placeholder="Password" asp-for="Password">
                <i class="bx bx-lock-alt icon"></i>
            </div>
            <div class="input_box">
                <input type="submit" class="input-submit" value="Login">
            </div>
        </form>
    </div>
</body>

</html>

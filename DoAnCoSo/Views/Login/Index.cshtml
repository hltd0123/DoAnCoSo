@model DoAnCoSo.Models.User
@{
    Layout = null;
}

<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Design.css" asp-append-version="true" />
</head>

<body>
    <div class="wrapper">
        <form class="login_box" asp-action="Index">
            <div class="login-header">
                <span>Login</span>
            </div>

            <div class="input_box">
                <input type="text" id="user" class="input-field" required placeholder="Username" asp-for="Name">
                <i class="bx bx-user icon"></i>
            </div>

            <div class="input_box">
                <input type="password" id="pass" class="input-field" required placeholder="Password" asp-for="Password"> 
                <i class="bx bx-lock-alt icon"></i>
            </div>

            <div class="remember-forgot">
                <div class="remember-me">
                    <input type="checkbox" id="remember">
                    <label for="remember">Remember me</label>
                </div>

                <div class="forgot">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
            <div class="input_box">
                <input type="submit" class="input-submit" value="Login">
            </div>
            <div class="register">
                <span>Don't have an account? <a asp-action="SignUp">Register</a></span>
            </div>
        </form>
    </div>
</body>

</html>